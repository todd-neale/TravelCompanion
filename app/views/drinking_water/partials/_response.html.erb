<% @content ||= nil %>

<div class="text-center">
  <% if @content %>
      <% if @is_it_safe == "Yes" %>
        <%= image_tag 'daily-water.png', class: 'water-image' %>
      <% else %>
        <%= image_tag 'no-drink.png', class: 'water-image' %>
      <% end %>
      <div class="mt-3">
        <h5><strong><%= @is_it_safe_text %></strong></h5>
        <p><%= @justification %></p>
      </div>
  <% else %>
    <%= image_tag 'water.png', class: 'water-image' %>
    <div class="mt-3">
      <h5><strong>Search a location to find out if you can drink the tap water </strong></h5>
    </div>
  <% end %>
</div>
