<div class="container">
  <div class="row text-center text-light title">
    <h1>Travel Companion</h1>
  </div>
  <div class="row justify-content-center mt-3" >
    <div class="col-sm-10">
      <div class="d-flex justify-content-center align-items-center flex-column">
        <div id="response" class="mt-3">
          <%= render 'drinking_water/partials/response' %>
        </div>
        <turbo-frame id="location-frame" class="mt-3">
          <%= form_tag("drinking-water/process_location", method: "post") do %>
            <%= text_field_tag :location, "London, UK", required: true  %>
            <%= submit_tag "Search" %>
          <% end %>
        </turbo-frame>
      </div>
      <div id="map-container" class="mt-5">
        <div style="width: 100%; height: 200px;"
             data-controller="water-map"
             data-water-map-markers-value="<%= @markers.to_json %>"
             data-water-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>